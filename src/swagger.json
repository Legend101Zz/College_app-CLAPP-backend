{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "College Application Backend",
    "description": "Fiverr for college students",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["healthcheck"],
        "summary": "Application service health check ðŸ’—",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },

    "/api/user/{id}": {
      "post": {
        "tags": ["user"],
        "description": "Get user data by ID and can also include includeFields query to get specific data for the given user ",
        "parameters": [
          {
            "name": "x-api-key",
            "in": "header",
            "default": "Provide API-key (ie. API_KEY_TOKEN from .env.locals file)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "ID of the user",
            "required": true,
            "type": "string",
            "pattern": "^[0-9a-fA-F]{24}$"
          },
          {
            "name": "includeFields",
            "in": "query",
            "description": "Array of fields to include",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "401": {
            "description": "Access forbidden. Incorrect x-api-key!",
            "error": {}
          },
          "500": {
            "description": "Internal Server Error",
            "message": {}
          }
        },
        "security": [
          {
            "api_key": "$X_API_KEY"
          }
        ]
      }
    }
  },
  "definitions": {
    "Input": {
      "required": ["input"],
      "properties": {
        "input": {
          "type": "object",
          "$ref": "#/definitions/InputBody"
        }
      }
    },
    "UserInput": {
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "default": "John Doe"
        },
        "email": {
          "type": "string",
          "default": "john.d@example.net"
        }
      }
    },
    "ResponseWithMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "x-api-key": {
      "type": "apiKey",
      "name": "x-api-key",
      "in": "header"
    }
  }
}
